<div class="container pt-4">
  
  <form action="/todos/{{ todo.id }}?_method=PUT" method="POST" style="display: inline;">
    <div class="input-group" style="width:80%">

      <div class="input-group-text">
        <input type="checkbox" name="is_done" class="form-check-input mt-1 mb-1" {{#if todo.is_done }} checked {{/if}}>
      </div>

      <input class="form-control"  type="text" placeholder="name" name="name" value="{{ todo.name }}">

      <div class="input-group-append">
        <button class="btn btn-success" type="submit">儲存</button>
      </div>

    </div>
  </form>
  
  <div class="mt-3">
    <a href="/todos" class="btn btn-primary mb-3" style="width:10%">返回</a>
  </div>
</div>
